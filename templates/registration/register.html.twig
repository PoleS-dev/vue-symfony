{% extends 'base.html.twig' %}

{% block title %}Inscription - DevDoc{% endblock %}

{% block body %}
<div class="register-page">
    <div class="register-container">
        <!-- Header avec logo -->
        <div class="register-header">
  
            <h1>Rejoignez-nous !</h1>
            <p class="subtitle">Cr√©ez votre compte d√©veloppeur</p>
        </div>

        <!-- Formulaire d'inscription -->
        {{ form_start(registrationForm, {'attr': {'class': 'register-form', 'novalidate': true}}) }}

            <div class="form-group">
                <label for="{{ registrationForm.username.vars.id }}" class="form-label">
                    <i class="icon-user"></i>
                    Nom d'utilisateur
                </label>
                {{ form_widget(registrationForm.username, { 
                    'attr': { 
                        'class': 'form-input',
                        'placeholder': 'Choisissez votre nom d\'utilisateur'
                    } 
                }) }}
                <div class="form-errors">
                    {{ form_errors(registrationForm.username) }}
                </div>
            </div>

            <div class="form-group">
                <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                    <i class="icon-lock"></i>
                    Mot de passe
                </label>
                {{ form_widget(registrationForm.plainPassword, { 
                    'attr': { 
                        'class': 'form-input',
                        'placeholder': 'Cr√©ez un mot de passe s√©curis√©'
                    } 
                }) }}
                <div class="form-errors">
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>

            <!-- Conditions d'utilisation -->
            <div class="terms-section">
                <div class="terms-text">
                    <p>En cr√©ant un compte, vous acceptez nos 
                        <a href="{{ path('app_terms') }}" class="terms-link" target="_blank">conditions g√©n√©rales d'utilisation</a> 
                        et notre <a href="{{ path('app_privacy') }}" class="terms-link" target="_blank">politique de confidentialit√©</a>.
                    </p>
                </div>
                
                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-checkbox' } }) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', { 'label_attr': { 'class': 'checkbox-label' } }) }}
                </div>
                <div class="form-errors">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            </div>

            <button type="submit" class="btn-register">
             
                Cr√©er mon compte
            </button>

            <div class="login-link">
                <p>D√©j√† un compte ?
                    <a href="{{ path('app_login') }}">
                        Se connecter
                        <i class="icon-arrow-right"></i>
                    </a>
                </p>
            </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
/* Variables CSS pour coh√©rence avec le site */
:root {
    --primary-color: #3b82f6;
    --amber-color: #fbbf24;
    --amber-light: #fed7aa;
    --blue-950: #1e3a8a;
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-600: #4b5563;
    --gray-800: #1f2937;
    --red-500: #ef4444;
    --green-500: #10b981;
}

/* Page principale */
.register-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #f0f9ff 0%, #ffffff 50%, #fefce8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.register-container {
    max-width: 450px;
    width: 100%;
    background: white;
    border-radius: 1.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    padding: 2rem;
    border: 1px solid var(--gray-100);
    animation: slideUp 0.6s ease-out;
}

/* Header avec logo */
.register-header {
    text-align: center;
    margin-bottom: 2rem;
}

.logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    background: var(--amber-light);
    border-radius: 0.75rem;
    padding: 1rem 1.5rem;
    margin: 0 auto 1.5rem;
    width: fit-content;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.2s;
}

.logo:hover {
    background: var(--amber-color);
    transform: translateY(-1px);
}

.icon-user-plus::before {
    content: "üë§‚ûï";
    font-size: 1.5rem;
}

.icon-user::before {
    content: "üë§";
    color: var(--primary-color);
}

.logo-text {
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--gray-800);
}

h1 {
    font-size: 2rem;
    font-weight: 800;
    color: var(--gray-800);
    margin-bottom: 0.5rem;
}

.subtitle {
    color: var(--gray-600);
    font-size: 1rem;
    margin: 0;
}

/* Formulaire */
.register-form {
    margin-top: 2rem;
}

.form-group {
    margin-bottom: 1.25rem;
}

.form-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--gray-800);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

.icon-lock::before {
    content: "üîí";
    color: var(--primary-color);
}

.form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid var(--gray-200);
    border-radius: 0.75rem;
    font-size: 1rem;
    color: var(--gray-800);
    background: white;
    transition: all 0.2s;
    box-sizing: border-box;
}

.form-input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-input:hover {
    border-color: var(--gray-600);
}

/* Section des conditions */
.terms-section {
    background: var(--gray-100);
    border-radius: 0.75rem;
    padding: 1.25rem;
    margin-bottom: 1.5rem;
    border-left: 4px solid var(--primary-color);
}

.terms-text {
    margin-bottom: 1rem;
}

.terms-text p {
    font-size: 0.875rem;
    color: var(--gray-600);
    line-height: 1.5;
    margin: 0;
}

.terms-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
}

.terms-link:hover {
    color: #1d4ed8;
    text-decoration: underline;
}

/* Checkbox */
.form-check {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.form-checkbox {
    width: 1.125rem;
    height: 1.125rem;
    accent-color: var(--primary-color);
    border-radius: 0.25rem;
}

.checkbox-label {
    font-size: 0.875rem;
    color: var(--gray-800);
    cursor: pointer;
    margin: 0;
    font-weight: 500;
}

/* Erreurs */
.form-errors {
    margin-top: 0.375rem;
}

.form-errors ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

.form-errors li {
    color: var(--red-500);
    font-size: 0.75rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.form-errors li::before {
    content: "‚ö†Ô∏è";
    font-size: 0.875rem;
}

/* Bouton principal */
.btn-register {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    background: linear-gradient(135deg, var(--green-500), #059669);
    color: white;
    border: none;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.btn-register:hover {
    background: linear-gradient(135deg, #059669, #047857);
    transform: translateY(-1px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

/* Lien de connexion */
.login-link {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--gray-200);
}

.login-link p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--gray-600);
}

.login-link a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
}

.login-link a:hover {
    color: #1d4ed8;
}

.icon-arrow-right::before {
    content: "‚Üí";
    margin-left: 0.25rem;
}

/* Responsive */
@media (max-width: 768px) {
    .register-page {
        padding: 0.75rem;
        min-height: 100vh;
        align-items: flex-start;
        padding-top: 2rem;
    }
    
    .register-container {
        padding: 1.5rem;
        border-radius: 1rem;
        margin: 0;
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.15);
    }
    
    .register-header {
        margin-bottom: 1.5rem;
    }
    
    .logo {
        padding: 0.75rem 1.25rem;
        margin-bottom: 1rem;
    }
    
    h1 {
        font-size: 1.75rem;
        margin-bottom: 0.25rem;
    }
    
    .logo-text {
        font-size: 1.25rem;
    }
    
    .subtitle {
        font-size: 0.875rem;
    }
    
    .form-group {
        margin-bottom: 1rem;
    }
    
    .form-input {
        padding: 0.875rem 1rem;
        font-size: 1rem;
    }
    
    .form-label {
        font-size: 0.8125rem;
        margin-bottom: 0.375rem;
    }
    
    .terms-section {
        padding: 1rem;
