        font-size: 0.8125rem;
    }
    
    .form-errors li {
        font-size: 0.625rem;
    }
}

@media (max-width: 360px) {
    .register-page {
        padding: 0.25rem;
        padding-top: 1rem;
    }
    
    .register-container {
        padding: 1rem;
    }
    
    .logo {
        padding: 0.5rem 0.75rem;
    }
    
    h1 {
        font-size: 1.375rem;
    }
    
    .logo-text {
        font-size: 1rem;
    }
    
    .form-input {
        padding: 0.625rem 0.75rem;
        font-size: 0.875rem;
    }
    
    .btn-register {
        padding: 0.75rem;
        font-size: 0.875rem;
    }
    
    .terms-section {
        padding: 0.75rem;
    }
    
    .terms-text p {
        font-size: 0.6875rem;
    }
    
    .checkbox-label {
        font-size: 0.6875rem;
    }
}

/* Animation d'entr√©e */
@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
