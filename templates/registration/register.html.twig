    }
    
    .login-link {
        margin-top: 1.25rem;
        padding-top: 1.25rem;
    }
    
    .form-errors li {
        font-size: 0.6875rem;
    }
}

@media (max-width: 480px) {
    .register-page {
        padding: 0.5rem;
        padding-top: 1.5rem;
    }
    
    .register-container {
        padding: 1.25rem;
        border-radius: 0.75rem;
    }
    
    .register-header {
        margin-bottom: 1.25rem;
    }
    
    .logo {
        padding: 0.625rem 1rem;
        gap: 0.5rem;
    }
    
